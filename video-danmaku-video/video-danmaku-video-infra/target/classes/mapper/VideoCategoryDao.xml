<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.videodanmaku.video.infra.basic.mapper.VideoCategoryDao">

    <resultMap type="com.videodanmaku.video.infra.basic.entity.VideoCategory" id="VideoCategoryMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="categoryName" column="category_name" jdbcType="VARCHAR"/>
        <result property="isDeteled" column="is_deteled" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="VideoCategoryMap">
        select
id, category_name, is_deteled
        from video_category
        where id = #{id}
    </select>
    <select id="getAll" resultMap="VideoCategoryMap">
        select
    id, category_name, is_deteled
        from video_category
    </select>



    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="VideoCategoryMap">
        select
id, category_name, is_deteled
        from video_category
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="categoryName != null and categoryName != ''">
                and category_name = #{categoryName}
            </if>
            <if test="isDeteled != null">
                and is_deteled = #{isDeteled}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from video_category
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="categoryName != null and categoryName != ''">
                and category_name = #{categoryName}
            </if>
            <if test="isDeteled != null">
                and is_deteled = #{isDeteled}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into video_category(category_name, is_deteled)
        values (#{categoryName}, #{isDeteled})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into video_category(category_name, is_deteled)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.categoryName}, #{entity.isDeteled})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into video_category(category_name, is_deteled)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.categoryName}, #{entity.isDeteled})
        </foreach>
        on duplicate key update
category_name = values(category_name),
is_deteled = values(is_deteled)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update video_category
        <set>
            <if test="categoryName != null and categoryName != ''">
                category_name = #{categoryName},
            </if>
            <if test="isDeteled != null">
                is_deteled = #{isDeteled},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from video_category where id = #{id}
    </delete>

</mapper>

